@model TeduShop.Web.Models.RegisterViewModel
@using BotDetect.Web.Mvc
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/Layouts.cshtml";
}
<link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl" rel="stylesheet" type="text/css" />
<div class="register">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        @Html.ValidationSummary(false, "", new { @class = "error" });
        if (ViewData["SuccessMsg"] != null)
        {
            <div class="alert alert-success" role="alert">
                <strong>Congratulation!!!</strong> @ViewData["SuccessMsg"]
                <br/> Please click <a href="/login.html">here </a> to login. 
            </div>
        }
        <div class="register-top-grid">
            <h3>PERSONAL INFORMATION</h3>
            <div class="mation">
                <span>User Name<label>*</label></span>
                @Html.TextBoxFor(model => model.UserName)

                <span>Password<label>*</label></span>
                @Html.PasswordFor(model => model.PassWord)

                <span>Email <label>*</label></span>
                @Html.TextBoxFor(model => model.Email)

                <span>Full Name<label>*</label></span>
                @Html.TextBoxFor(model => model.FullName)

                <span>Phone Number<label>*</label></span>
                @Html.TextBoxFor(model => model.PhoneNumber)

                <span>Address<label>*</label></span>
                @Html.TextBoxFor(model => model.Address)
                
                @{
                    MvcCaptcha registerCaptcha = new MvcCaptcha("registerCaptcha");
                }
                @Html.Captcha(registerCaptcha)
                @Html.TextBox("CaptchaCode")               
            </div>
            <div class="clearfix"> </div>
        </div>
        <div class="clearfix"> </div>
        
        <div class="register-but">
            <input type="submit" value="submit">
            <div class="clearfix"> </div>
        </div>
    }    
</div>

