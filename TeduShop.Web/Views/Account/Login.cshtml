@model TeduShop.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Layouts.cshtml";
}

<div class="account_grid">
    <div class="login-right">
        <h3>LOGIN</h3>
        @using (Html.BeginForm("Login", "Account", new {retunUrl = @ViewBag.ReturnUrl }, FormMethod.Post))
        {
            <div>
                <span>User Name<label>*</label></span>
                @Html.TextBoxFor(model => model.UserName)
            </div>
            <div>
                <span>Password<label>*</label></span>
                @Html.PasswordFor(model => model.PassWord)
            </div>
            <div>
                <span>Password<label>*</label></span>
                @Html.CheckBoxFor(model => model.RememberMe)
                Remember password?
            </div>
            <a class="forgot" href="#">Forgot Your Password?</a>
            <input type="submit" value="Login">

        }
        <p>If you have an account with us, please log in.</p>
       @Html.Partial("_ExternalLoginsListPartial", new TeduShop.Web.Models.ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
    </div>
    <div class="login-left">
        <h3>Create new Account</h3>
        <p>By creating an account with our store, you will be able to move through the checkout process faster, store multiple shipping addresses, view and track your orders in your account and more.</p>
        <a class="acount-btn" href="/register.html">Create an Account</a>
    </div>
    <div class="clearfix"> </div>
</div>



